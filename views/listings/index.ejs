<% layout('/layouts/boilerplate') -%>

<body>
<h2 class="page-title">Discover Hidden Gems of India</h2>

<div class="card-grid">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="card-link">
        <div class="card">
            <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="card-img">
            <div class="card-body">
                <h3 class="card-title"><%= listing.title %></h3>
                <p class="card-desc"><%= listing.description %></p>
                <p class="card-location"><%= listing.location %>, <%= listing.country %></p>
                <p class="card-price">â‚¹ <%= listing.price %> / night</p>
            </div>
        </div>
    </a>
    <% } %>
</div>
</body>
